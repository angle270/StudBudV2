@import url("https://fonts.googleapis.com/css2?family=Montserrat+Alternates&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap");
html {
  font-size: 100%;
}
/*16px*/
body, p, input, button {
  font-family: "Nunito Sans", sans-serif;
  font-weight: 400;
  line-height: 1.75;
  color: #000000;
}
p {
  margin-bottom: 1rem;
}
h1, h2, h3 {
  margin: 3rem 0 1.38rem;
  font-family: "Montserrat Alternates", sans-serif;
  font-weight: 400;
  line-height: 1.3;
}
a, h4, h5 {
  font-family: "Josefin Sans", sans-serif;
  font-weight: 400;
  line-height: 1.3;
}
h1 {
  margin-top: 0;
  font-size: 1.802rem;
}
h2 {
  font-size: 1.602rem;
}
h3 {
  font-size: 1.424rem;
}
h4 {
  font-size: 1.266rem;
}
h5 {
  font-size: 1.125rem;
}
small, .text_small {
  font-size: 0.889rem;
}
nav {
  width: 120px;
  height: 75vh;
  flex-direction: row;
  position: absolute;
  top: 30px;
  left: 10px;
  display: flex;
  border-radius: 40px;
  justify-content: space-around;
  align-items: center;
  background-color: #d7dafa;
}
nav .nav-links {
  list-style: none;
  display: flex;
  flex-direction: column;
}
nav .nav-links .nav-item a {
  display: inline-block;
  text-decoration: none;
  color: black;
  padding: 2em 0;
}
nav .nav-links .nav-item a:hover {
  color: cadetblue;
}
nav .nav-links .nav-item a.active {
  font-weight: bold;
}
.app-container {
  padding-left: 120px;
}
.page-container {
  margin: 4em;
}
.page-container#home {
  text-align: center;
}
.page-container:not(#home) {
  display: none;
}
/* https://www.digitalocean.com/community/tutorials/css-minimal-css-reset */
html {
  box-sizing: border-box;
  font-size: 16px;
}
*,
*:before,
*:after {
  box-sizing: inherit;
}
body,
h1,
h2,
h3,
h4,
h5,
h6,
p,
ol,
ul {
  margin: 0;
  padding: 0;
  font-weight: normal;
}
ol,
ul {
  list-style: none;
}
img {
  max-width: 100%;
  height: auto;
}
#task-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr;
  grid-template-areas: "taskform tasklist";
}
#taskform {
  grid-area: taskform;
  max-width: 300px;
  margin: 0 auto;
}
#taskform label {
  display: block;
  width: 100%;
}
#tasklist {
  grid-area: tasklist;
}
#tasklist ul {
  list-style: none;
}
#acronym-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr;
  grid-template-areas: "acronymform acronymlist";
}
#acronymform {
  grid-area: acronymform;
  max-width: 300px;
  margin: 0 auto;
}
#acronymform label {
  display: block;
  width: 100%;
}
#acronymlist {
  grid-area: acronymlist;
}
#acronymlist ul {
  list-style: none;
}
footer {
  position: fixed;
  width: 100%;
  bottom: 0px;
  left: 0px;
}
.music-container {
  background-color: cornsilk;
  border-radius: 20px;
  display: flex;
  padding: 20px 30px;
  margin: 10px 0;
}
.music-nav {
  display: flex;
  align-items: center;
  justify-content: center;
}
.action-btn {
  background-color: white;
  color: #dfdbdf;
  border: 0;
  font-size: 15px;
  cursor: pointer;
  padding: 10px;
  margin: 0 10px;
}
.action-btn:focus {
  outline: 0;
}
.action-btn-big {
  color: #cdc2d0;
  font-size: 20px;
}
.music-info {
  position: relative;
  width: 100%;
  margin: 0 10px;
  padding: 3px;
}
.progress-container {
  background: white;
  border-radius: 5px;
  cursor: pointer;
  margin: 10px 0;
  height: 4px;
  width: 100%;
}
* {
  box-sizing: border-box;
}
#kanban {
  min-height: 80vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.kanban-container {
  width: 100%;
  height: 80vh;
  display: flex;
}
.status {
  width: 25%;
  background-color: #f3f3f3;
  position: relative;
  padding: 60px 1rem 0.5rem;
}
.status:nth-child(even) {
  background-color: #e9e9e96b;
}
.status h1 {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #343434;
  color: #f3f3f3;
  margin: 0;
  width: 100%;
  padding: 0.5rem 1rem;
}
#add-btn {
  padding: 0.5rem 1rem;
  background-color: #ccc;
  outline: none;
  border: none;
  width: 100%;
  font-size: 1.2rem;
  margin: 0.5rem 0;
  border-radius: 4px;
  cursor: pointer;
}
#add-btn:hover {
  background-color: #aaa;
}
.todo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  background-color: #fff;
  box-shadow: rgba(15, 15, 15, 0.1) 0px 0px 0px 1px, rgba(15, 15, 15, 0.1) 0px 2px 4px;
  border-radius: 4px;
  padding: 0.5rem 1rem;
  font-size: 1.5rem;
  margin: 0.5rem 0;
}
.todo .close {
  position: absolute;
  right: 1rem;
  top: 0rem;
  font-size: 2rem;
  color: #ccc;
  cursor: pointer;
}
.todo .close:hover {
  color: #343444;
}
